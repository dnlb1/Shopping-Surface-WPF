<Window x:Class="Shopping_Surface_WPF.ButtonWindows.SearchByNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shopping_Surface_WPF.ButtonWindows"
        xmlns:VM="clr-namespace:Shopping_Surface_WPF.ViewModels.ButtonViewModels"
        mc:Ignorable="d"
        Title="SearchByNameWindow" Height="220" Width="343">
    <Window.DataContext>
        <VM:SearchByNumberWindowViewModel></VM:SearchByNumberWindowViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Névszerinti keresés" VerticalContentAlignment="Center"></Label>
        <TextBox Grid.Row="1" VerticalContentAlignment="Center" Text="{Binding Name,UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Button Grid.Row="2" Content="Mehet" Command="{Binding SearchByName}" Click="Button_Click"></Button>
    </Grid>
</Window>
