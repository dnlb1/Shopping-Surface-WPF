<Window x:Class="Shopping_Surface_WPF.ButtonWindows.SearchByNumberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shopping_Surface_WPF.ButtonWindows"
        xmlns:VM="clr-namespace:Shopping_Surface_WPF.ViewModels.ButtonViewModels"
        mc:Ignorable="d"
        Title="Search" Height="207" Width="372">
    <Window.DataContext>
        <VM:SearchByNumberWindowViewModel></VM:SearchByNumberWindowViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="345*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Cikkszám szerinti keresés" VerticalContentAlignment="Center"></Label>
        <TextBox Text="{Binding ArticleNumber, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" VerticalContentAlignment="Center"></TextBox>
        <Button Grid.Row="2" Content="Mehet" Command="{Binding Search}"></Button>
    </Grid>

</Window>
